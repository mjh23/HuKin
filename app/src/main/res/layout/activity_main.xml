<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/settingsun"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="Hukin"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@android:color/black"
        android:textSize="75sp"
        android:typeface="normal"
        app:fontFamily="@font/aldrich"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/background" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The Arena"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:typeface="normal"
        app:fontFamily="@font/aldrich"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="64dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/playgamebtn"
            android:layout_width="213dp"
            android:layout_height="59dp"
            android:layout_marginBottom="32dp"
            android:background="@drawable/button_backgrounds"
            android:fontFamily="@font/aldrich"
            android:text="Start New Game"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:typeface="monospace"
            app:srcCompat="@color/colorPrimaryDark" />

        <Button
        android:id="@+id/continuegamebtn"
        android:layout_width="213dp"
        android:layout_height="59dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/button_backgrounds"
        android:fontFamily="@font/aldrich"
        android:text="Continue Game"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:typeface="monospace"
        app:srcCompat="@color/colorPrimaryDark"
        android:visibility="gone"/>

        <Button
        android:id="@+id/settingsbtn"
        android:layout_width="213dp"
        android:layout_height="59dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/button_backgrounds"
        android:fontFamily="@font/aldrich"
        android:text="Settings"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:typeface="monospace"
        app:srcCompat="@color/colorPrimaryDark"/>

        <Button
            android:id="@+id/tutorial_creditsbtn"
            android:layout_width="213dp"
            android:layout_height="59dp"
            android:background="@drawable/button_backgrounds"
            android:fontFamily="@font/aldrich"
            android:text="Tutorial/Credits"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:typeface="monospace"
            app:srcCompat="@color/colorPrimaryDark"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>